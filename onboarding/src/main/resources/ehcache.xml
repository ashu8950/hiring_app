<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xmlns='http://www.ehcache.org/v3'>
    <cache alias="candidate">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <heap>100</heap>
    </cache>

    <cache alias="candidateCount">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>10</heap>
    </cache>

    <cache alias="candidateReportData">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <heap>100</heap>
    </cache>

    <cache alias="hiredCandidates">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>50</heap>
    </cache>
</config>
